<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/popupBackground"
    android:padding="10dp">

    <ImageView
        android:id="@+id/statuspopupImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/znacka1" />

    <android.parkskocjanskejame.utils.CustomTextView
        android:id="@+id/naziv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/statuspopupImage"
        android:text="123"
        android:layout_marginBottom="20dp"
        android:fontFamily="s"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/textColor"
        android:textSize="28dp"

        />

    <android.parkskocjanskejame.utils.CustomButton
        android:id="@+id/helpButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:layout_marginBottom="20dp"

        android:background="@drawable/custombutton"
        android:text="@string/zapri"
        android:textColor="@color/buttonTextColor"
        android:textSize="20dp" />

</RelativeLayout>