<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.parkskocjanskejame.utils.CustomTextView
        android:id="@+id/tabla26Text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_toStartOf="@+id/tabla26Text3"
        android:text="0"
        android:textColor="@color/buttonTextColor"
        android:background="@color/buttonColor"
        android:textSize="25dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"/>

    <android.parkskocjanskejame.utils.CustomTextView
        android:id="@+id/tabla26Text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/scrollView2"
        android:layout_alignEnd="@+id/scrollView2"
        android:text="/4"
        android:background="@color/buttonColor"
        android:textColor="@color/buttonTextColor"
        android:textSize="25dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/tabla26Text2"
        android:id="@+id/scrollView2">

        <RelativeLayout
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <android.parkskocjanskejame.utils.CustomTextView
                android:id="@+id/tabla4Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="@string/tabla26"
                android:textColor="@color/textColor"
                android:textSize="25dp" />

            <android.parkskocjanskejame.utils.ExpandableHeightGridView
                android:id="@+id/tabla26Grid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:horizontalSpacing="10dp"
                android:numColumns="2"
                android:verticalSpacing="10dp"
                android:layout_below="@+id/tabla4Text" />

            <android.parkskocjanskejame.utils.CustomButton
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/tabla26Grid"
                android:layout_centerHorizontal="true"
                android:layout_margin="15dp"
                android:text="@string/odgovori"
                android:background="@drawable/custombutton"
                android:textColor="@color/buttonTextColor"
                android:textSize="20dp" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
